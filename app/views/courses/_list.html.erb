<p>
  <%= @courses.count %> courses
</p>

<%= form_for :search, :method => 'get', :url => { :controller => 'courses', :action => 'search' } do %>
  <%= text_field_tag :q, params[:q] %>
  <%= submit_tag "Search", :name => nil %>
<% end %>

<%= link_to 'All Courses', courses_path %> | <%= link_to 'New Course', new_course_path %>
<%= paginate @courses %>

<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= link_to course.name, course %></td>
    <td><%= link_to 'Edit', edit_course_path(course) %></td>
    <td><%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>